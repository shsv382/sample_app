<h1>Sign in</h1>
<div class="row>">

	<div class="center">
		<%= form_for :session, url: sessions_path do |f| %>
			<%= f.label "Your e-mail" %>
			<%= f.email_field :email, class: "text" %>
			<%= f.label "Password" %>
			<%= f.password_field :password, class: "text" %>
			<center>
			<%= f.submit "Sign in", class: "button" %>
			
			<%= link_to "Sign up!", new_user_path, class: "button button-sign-up" %>
			</center>
		<% end %>
	</div>
</div>