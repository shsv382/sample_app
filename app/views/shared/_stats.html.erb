<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>" class="stats_anchor">
    <center><strong id="following" class="stat">
      <%= @user.followed_users.count %>
    </strong>
    following</center>
  </a>

  <a href="<%= followers_user_path(@user) %>" class="stats_anchor">
   <center> <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers</center>
  </a>
</div>